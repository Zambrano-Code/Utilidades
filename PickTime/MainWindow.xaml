<Window x:Class="PickTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Aqua">
        <view:PickTime x:Name="aaa" HorizontalAlignment="Center" Days="true"/>
        <TextBlock Text="{Binding ElementName=aaa, Path=Time, Mode=TwoWay}" VerticalAlignment="Bottom" Width="100" Height="50"/>
    </Grid>
</Window>
